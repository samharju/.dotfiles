#!/usr/bin/env bash

fd --hidden --no-ignore "\.git$" \
    "$HOME/.local/share" \
    "$HOME/git" \
    "$HOME/plugins" \
    "$HOME/wt-dump" \
    | sed -e 's|/.git/$||' \
    | sed -e 's|/.git$||' \
    | fzf \
    --prompt ' ...' \
    --bind 'load:change-prompt:> ' \
    --query "$1" \
    --header='git projects' \
    --header-first \
    --tmux \
    --info=hidden
