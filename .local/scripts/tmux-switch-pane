#!/usr/bin/env bash

out=$(tmux list-panes -aF '#D #{p14:#{session_name}:#I} #{p5:pane_current_command} #{pane_current_path} #{?#{==:#{window_panes},1},, -- #{?pane_at_top,top,#{?pane_at_bottom,bottom,}}#{?pane_at_left,left,#{?pane_at_right,right,}} #{?pane_active,(active),}}')

declare -A panes
while IFS= read -r line; do
    key=$(echo "$line" | cut -d' ' -f2-)
    value=$(echo "$line" | cut -d' ' -f1)
    panes["$key"]="$value"
done <<< "$out"

fzf_input=""
for key in "${!panes[@]}"; do
    fzf_input+="$key\n"
done

# Use fzf to select a pane
t=$(echo -e "$fzf_input" | fzf \
    --header='switch pane' \
    --header-first \
    --tmux \
    --info=hidden)

[[ -z "$t" ]] && exit 0

# Output the selected pane's ID

tmux switch-client -t "${panes["$t"]}"
